  "repository": {
    "type": "git",
    "url": "https://github.com/LukasOrcik/upgates-com-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
